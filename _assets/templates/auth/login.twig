{% extends 'auth/layout.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('auth') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('auth') }}
{% endblock %}

{% block title %}{{ translate('log_in') }}{% endblock %}

{% block content %}
    <section class="vh-100 bg-primary bg-gradient">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-light text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-4">
                                <h2 class="fw-bold mb-5 text-uppercase text-primary d-flex justify-content-center align-items-center">
                                    <img src="{{ asset('build/images/logo.png') }}" width="64" height="64"
                                         alt="Aoo Logo"/>
                                    {{ translate('login') }}
                                </h2>
                                <form method="post" action="/login" class="login-form">
                                    <div class="form-outline form-white mb-4">
                                        <label for="email">
                                            <input type="email" name="email" class="form-control form-control-lg"
                                               placeholder="{{ translate('email') }}" required/>
                                        </label>
                                    </div>
                                    <div class="form-outline form-white mb-1">
                                        <label for="password">
                                            <input type="password" name="password" class="form-control form-control-lg"
                                                   placeholder="{{ translate('password') }}" required/>
                                        </label>
                                    </div>
                                    <p class="mb-4 text-end">
                                        <a class="text-secondary fw-semibold"
                                           href="/forgot-password">{{ translate('login:forgot_pass') }}</a>
                                    </p>
                                    <button class="btn btn-primary bg-gradient text-white btn-lg px-5 log-in-btn"
                                            type="button">
                                        {{ translate('log_in') }}
                                    </button>
                                </form>
                            </div>
                            <div>
                                <p class="mb-0 text-dark">{{ translate('login:do_you_have_account') }}
                                    <a href="/register" class="text-primary fw-bold">{{ translate('sign_up') }}</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'auth/two_factor_modal.twig' %}
    </section>
{% endblock %}
