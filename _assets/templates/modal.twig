<div class="modal fade {{ modalClass }}" id="{{ modalId }}" tabindex="-1" role="dialog"
     aria-labelledby="coreModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="coreModalLabel"> {{ modalTitle }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-left: auto">
                    <span aria-hidden="true" data-dismiss="modal">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ modalContent | raw }}
            </div>
            {% include 'modal_actions.twig' %}
        </div>
        {% include 'catalog/catalog_loader.twig' with {class: 'd-none', id: '--form-loader'} %}
    </div>
</div>