FROM ubuntu:latest
ARG DEBIAN_FRONTEND=noninteractive
MAINTAINER evi_tut@mail.ru
ADD crontab /etc/cron.d/slim
RUN chmod 777 /etc/cron.d/slim
RUN apt-get update && \
    apt-get -y install cron nano php-cli && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
CMD touch /var/log/cron.log && chmod 777 /var/log/cron.log && cron && tail -f /var/log/cron.log