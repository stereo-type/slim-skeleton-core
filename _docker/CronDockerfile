FROM ubuntu:noble
ARG DEBIAN_FRONTEND=noninteractive
MAINTAINER evi_tut@mail.ru

RUN apt-get update && \
    apt-get -y install cron nano php-cli php-gmp

ADD crontab /etc/cron.d/slim
RUN chown root:root /etc/cron.d/slim
RUN chmod 777 /etc/cron.d/slim
RUN touch /var/log/cron.log && chmod 777 -R /var/log
CMD cat /etc/cron.d/slim | crontab -u root - && cron && tail -f /var/log/cron.log